# Variables y Funciones
lista_productos = []  # Lista de productos
lista_productos.clear()

def agregarProducto():
    # Valores
    nombre   = input("Ingrese el nombre del producto: ")
    cantidad = int(input("Ingrese la cantidad del producto: "))
    
    # Se guarda el producto en un diccionario
    producto = {
        "nombre": nombre,
        "cantidad": cantidad
    }

    # Se agrega el producto a la lista de productos
    lista_productos.append(producto)

    print(f"El producto '{nombre}' ha sido agregado con 칠xito a la lista de productos.")


def verProductos():
    if not lista_productos:
        print("No hay productos registrados.\n")
    else:
        print("Productos registrados:")
        for producto in lista_productos:
            print(f"Producto: {producto['nombre']}, Cantidad: {producto['cantidad']}")

def salir():
    print(f"-------------------------\n    Hasta pronto 游녦\n-------------------------\n")


while True:
    print("-------------------------\n    Men칰 principal \n-------------------------")
    print("1. Agregar producto")
    print("2. Ver productos")
    print("3. Salir")

    # Se solicita al usuario que ingrese una opci칩n
    try:
        op = int(input("\nPor favor ingrese el n칰mero de opci칩n: "))
    except ValueError:
        print("仇勇 Por favor ingrese un n칰mero v치lido.")
        continue

    # Salida
    if op == 1:
        agregarProducto()
    elif op == 2:
        verProductos()
    elif op == 3:
        salir()
        break
    else:
        print("仇勇 La opci칩n es incorrecta.")
